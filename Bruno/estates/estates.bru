tests {
  test("Statut doit être 201 Created", function () {
    expect(res.getStatus()).to.equal(201);
  });
  
  test("Content-Type application/ld+json", function () {
    expect(res.getHeader("content-type")).to.contain("application/ld+json");
  });
  
  test("Header Location avec nouvel ID", function () {
    const location = res.getHeader("location");
    expect(location).to.exist.and.match(/\/api\/estates\/\d+$/);
  });
  
  test("Structure Estate créé correcte", function () {
    const estate = res.getBody();
    expect(estate).to.have.property("@context").that.equals("/api/contexts/Estate");
    expect(estate).to.have.property("@id").that.match(/\/api\/estates\/\d+$/);
    expect(estate).to.have.property("@type").that.equals("Estate");
    expect(estate.id).to.be.a("number").and.above(0);
  });
  
  
  test("Données saisies bien sauvegardées", function () {
    const estate = res.getBody();
    expect(estate.name).to.equal("Appartement");
    expect(estate.city).to.equal("Lyon");
    expect(estate.price).to.equal(250000);
    expect(estate.state).to.equal("Achat");
    expect(estate.reviews).to.be.an("array").that.is.empty;
  });
  
  
  test("Estate cohérent", function () {
    const estate = res.getBody();
    expect(estate.price).to.be.above(0);
    expect(estate.name).to.have.length.above(2);
    expect(estate.city).to.match(/^[a-zA-ZÀ-ÿ\s\-]+$/);
  });
  
}

