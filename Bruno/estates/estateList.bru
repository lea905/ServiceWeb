tests {
  test("Statut doit être 200", function () {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Content-Type application/ld+json", function () {
    expect(res.getHeader("content-type")).to.contain("application/ld+json");
  });
  
  test("Réponse rapide < 800ms", function () {
    expect(res.getResponseTime()).to.be.below(800);
  });
  
  
  test("Structure ApiPlatform correcte", function () {
    const body = res.getBody();
    expect(body).to.have.property("@context");
    expect(body).to.have.property("@id").that.equals("/api/estates");
    expect(body).to.have.property("@type").that.equals("Collection");
    expect(body).to.have.property("totalItems").that.equals(2);
    expect(body).to.have.property("member").that.is.an("array");
  });
  
  test("Structure estates complète", function () {
    const body = res.getBody();
    const estates = body.member;
    
    expect(estates).to.have.lengthOf(2);
    
    estates.forEach((estate, index) => {
      expect(estate).to.have.property("@id");
      expect(estate).to.have.property("@type").that.equals("Estate");
      expect(estate.id).to.be.a("number");
      expect(estate.name).to.be.a("string").and.not.empty;
      expect(estate.city).to.be.a("string").and.not.empty;
      expect(estate.price).to.be.a("number");
      expect(estate.state).to.be.a("string");
      expect(estate.reviews).to.be.an("array");
    });
  });
  
}

settings {
  encodeUrl: true
